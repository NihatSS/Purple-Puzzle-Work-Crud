@model IEnumerable<SliderImage>
<div class="container mt-5">
    <h1 class="text-center">Slider images</h1>
    <div class="create-area">
        <a asp-action="Create" class="btn btn-success">Create</a>
    </div>
    <div class="table-responsive pt-3 mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/assets/img/@item.Image" style="width:100px;height:80px" alt="image">
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-outline-primary">Detail</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                              <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                            <form asp-action="ChangeMainStatus" asp-route-id="@item.Id" method="post" class="d-inline">
                                <button type="submit" class="btn @(item.IsMain ? "btn-success btn-disabled-custom":"btn-danger")">Change main status</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

